<div class="container">
  <h3>商品編集</h3>
  <div>
    <%= form_with model: @item, url: admin_item_path, method: patch do |f| %>
      <table>
        <tr>
          <td><%= f.label :商品画像 %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%= f.collection_select(:genre_id, :id, :name) %></td>
        </tr>
        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :税込価格 %></td>
          <td><%= f.field :price %></td>
        </tr>
        <tr>
          <td><%= f.label :販売ステータス %></td>
          <td>
            <%= f.radio_button :is_active, true %>販売中
            <%= f.radio_button :is_active, false %>在庫切れ
          </td>
        </tr>
        <tr>
          <td><%= f.submit '保存', %></td>
        </tr>
      </table>
  </div>
</div>