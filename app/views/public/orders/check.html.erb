<div class="container">
<h4>注文情報確認</h4>

  <div class="row">
    <table>
      <thead>
        <th>商品名</th>
        <th>単価(税込み)</th>
        <th>数量</th>
        <th>小計</th>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.item, :image, size:"100x100" %>
            </td>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.item.price*cart_item.amount %></td>
          </tr>
        <% end %>
      </tbody>


    <table>
      <tr>
        <th>送料</th>
        <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td><%= @total.to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td><%= @charge.to_i.to_s(:delimited) %>円</td>
      </tr>

    </table>
  </div>

  <div class="row">
    <h4><strong> 支払方法</strong></h4>
    <%= @order.payment_method %>
  </div>

  <div class="row">
    <h4><strong>お届け先</strong></h4>
    <%= @order.postal_code %>
    <%= @order.address %>
    <%= @order.name %>
  </div>

  <div class="row">
    <%= form_with model: @order, url: public_orders_path, local: true do |f| %>
        <%= f.hidden_field :payment_method %>
      	<%= f.hidden_field :address %>
      	<%= f.hidden_field :postal_code %>
      	<%= f.hidden_field :name %>
      	<%= f.hidden_field :payment_method,value: @order.payment_method %>
      	<%= f.hidden_field :shipping_cost %>
      	<%= f.hidden_field :total_payment,value: @order.total_payment %>
      	<%= f.hidden_field :status,value: @order.status, checked: "入金待ち" %>

      	<%= f.submit '注文を確定する' %>
    <% end %>
  </div>

</div>