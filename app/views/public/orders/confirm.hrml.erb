<div class="container">
<h4>注文情報確認</h4>

  <div class="row">
    <table>
      <thead>
        <th>商品名</th>
        <th>単価(税込み)</th>
        <th>数量</th>
        <th>小計</th>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.product, :image, fallback: "no_image.jpg" %>
            </td>
            <td><%= cart_item.name %></td>
            <td><%= cart_item.add_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.total_payment</td>
          </tr>
        <% end %>
      </tbody>


    <table>
      <tr>
        <th>送料</th>
        <td></td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td></td>
      </tr>
      <tr>請求金額</tr>

    </table>
  </div>

  <div class="row">
    <h4><strong> 支払方法</strong></h4>
    <%= @order.payment_method_i18n %>
  </div>

  <div class="row">
    <h4><strong>お届け先</strong></h4>
    <%= @order.customer_address %>
    <%= @order.customer %>
  </div>

  <div class="row">
    <%= form_with model: @order, url: orders_path, local: true do |f| %>
        <%= f.hidden_field :payment_method %>
      	<%= f.hidden_field :address %>
      	<%= f.hidden_field :postal_code %>
      	<%= f.hidden_field :name %>
      	<%= f.hidden_field :shipping_cost %>
      	<%= f.submit '注文を確定する' %>
    <% end %>
  </div>

</div>