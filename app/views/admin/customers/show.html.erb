<h2><%= @customers.last_name %><%= @customers.first_name %>様の会員情報</h2>

<table class="table">

<tr>
  <th>顧客ID</th>
  <td><%= @customers.id %>
  </td>
</tr>

<tr>
  <th>氏名</th>
  <td><%= @customers.last_name %><%= @customers.first_name %>
  </td>
</tr>

<tr>
  <th>フリガナ</th>
  <td><%= @customers.last_name_kana %><%= @customers.first_name_kana %>
  </td>
</tr>

<tr>
  <th>郵便番号</th>
  <td><%= @customers.postal_code %></td>
</tr>

<tr>
  <th>住所</th>
  <td><%= @customers.address %></td>
</tr>

<tr>
  <th>電話番号</th>
  <td><%= @customers.telephone_number %></td>
</tr>

<tr>
  <th>メールアドレス</th>
  <td><%= @customers.email %></td>
</tr>

<tr>
  <th>パスワード</th>
  <td><%= @customers.encrypted_password %></td>
</tr>

<tr>
  <th>会員ステータス </th>
  <% if @customers.is_deleted? %>
    <th>退会</th>
  <% else %>
    <th>有効</th>
  <% end %>
</tr>

</table>

<%= link_to "編集", edit_admin_customer_path(@customers),class:"btn btn-outline-secondary btn-block" %>
<%= link_to "ホーム", admin_orders_path(@customers_id),class:"btn btn-outline-secondary btn-block" %>