<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: '/public/addresses' do |f| %>
  <div class="form-group">
        <%= f.label :郵便番号（ハイフンなし） %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <%= f.label :宛名 %>
        <%= f.text_field :name %>
      </div>
      <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |addresses| %>
    <tr>
      <td><%= addresses.postal_code %></td>
      <td><%= addresses.address %></td>
      <td><%= addresses.name %></td>
      <td>
        <%= link_to '編集する', edit_public_address_path(address.id) %>
        <%= link_to '削除する', public_addresses_path(address.id),method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>