<div class="container">
  <h1>注文履歴一覧</h1>
  <div class="row">
    <table　class="table">
  <thead　class="thead-dark">
    <tr>
        <th>購入日時</th>
           <th>購入者</th>
          <th>注文個数</th>
        <th>注文ステータス</th>

    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at %>
        <% end %>
      </td>
      <td><%= order.name %></td>
      <td><%= order.order_details.all.sum(:amount) %></td>
      <td><%= order.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>

</div>


<!--sum 合計を出す
all order-details の中身を全てのレコードを全て持ってくる-->