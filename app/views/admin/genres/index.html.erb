<div class="container">
<h3>ジャンル一覧・追加</h3>
<br>
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <div class="row justify-content-center">
      <div class="col-8">
        <div>
          <td><%= f.label :ジャンル名 %>&nbsp;&nbsp;&nbsp;</td>
          <td><%= f.text_field :name, placeholder: "ジャンル名" %>&nbsp;&nbsp;&nbsp;</td>
          <td><%= f.submit '新規登録', class: "btn btn-success btn-sm" %></td>
        </div>
        <br>
        <table class="table border">
          <thead class="table table-secondary">
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>