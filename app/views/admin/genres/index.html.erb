<h3>ジャンル一覧・追加</h3>
  <div>
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>

    <%= f.label :ジャンル名 %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>

    <div>
      <table>
        <thead>
          <tr>
            <th>ジャンル名</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
  </div>