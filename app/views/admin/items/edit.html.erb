<div class="row justify-content-center">
  <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
    <div class="container">
    <h3>商品編集</h3>
    <br>
      <table class="table table-bordered">
        <tr>
          <td class="bg-light"><%= f.label :商品画像 %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td class="bg-light"><%= f.label :ジャンル %></td>
          <td><%= f.select :genre_id, @genres.map{|genre|[genre.name, genre.id]}, autofocus: true %></td>
        </tr>
        <tr>
          <td class="bg-light"><%= f.label :商品名 %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td class="bg-light"><%= f.label :税込価格 %></td>
          <td><%= f.text_field :price %></td>
        </tr>
        <tr>
          <td class="bg-light"><%= f.label :販売ステータス %></td>
          <td>
            <%= f.radio_button :is_active, true %>販売中
            <%= f.radio_button :is_active, false %>在庫切れ
          </td>
        </tr>
      </table>
    </div>
    <br>
    <div class="row justify-content-center">
      <%= f.submit '変更を保存', class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>

