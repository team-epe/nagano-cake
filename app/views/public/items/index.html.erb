<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <table class="table table-bordered">
        <thead>
          <th>ジャンル検索</th>
        </thead>
        <tbody class="table table-borderless">
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to public_items_path(name: genre.id) do %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-10">
      <h1>商品一覧</h1>
    </div>
    <div class="col-lg-2"></div>
    <% @items.each do |item| %>
      <div class="col-lg-2">
         <table class="table table-borderless">
           <tr>
                <td>
                  <%= link_to public_item_path(item.id) do %>
                  <%= attachment_image_tag item, :image,  size: "100x100" %>
                  <% end %>
                </td>
            </tr>
            <tr>
              <td><%= item.name %></td>
            </tr>
              <tr>
                <td><%= item.price %></td>
              </tr>
          </table>
      </div>
    <% end %>
  </div>
</div>

<!--顧客視点　商品一覧-->

