<h3>ショッピングカート</h3>
  <% if current_customer.cart_items.count != 0 %>
    <%= button_to "カートを空にする", public_cart_items_path, method: :delete %>
  <% end %>

  <% if @cart_items.empty? %>
    <div calss="row">
      <div>カートが空です</div>
    </div>
  <% else %>
    <div class="row">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= attachment_image_tag cart_item.item, :image, :fii, 60, 40 %></td>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.ptice %></td>
              <td><%= cart_item.subtotal %></td>
            </tr>
        </tbody>
      </table>
    </div>
    <table>
      <tr>
        <th>合計金額</th>
        <th><%= @total.to_s(:delimited) %></th>
      </tr>
    </table>
  <% end %>

  <div class="row">
    <div>
      <%= link_to "買い物を続ける", public_items_path %>
    </div>
    <% if current_customer.cart_items.count != 0 %>
      <div>
        <%= link_to "情報入力に進む", new_public_order_path %>
      </div>
    <% end %>
  </div>

