<div class="container">
  <div class="row">

    <div class="col-lg-4">
      <%= attachment_image_tag @item, :image, size: "300x300" %>
    </div>
    <div class="col-lg-6">
      <table class="table table-borderless">
        <tr>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>¥<%= @item.price %>(税込)</td>
        </tr>
      </table>
      <%= form_with model: @cart_item, url: public_cart_items_path, local: true do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :amount, *[1..10] %>

        <%= f.submit 'カートに入れる' %>
      <% end %>
    </div>
  </div>
</div>
