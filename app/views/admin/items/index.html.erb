
<h1>商品一覧</h1>
<%= link_to '新規登録', new_admin_item_path %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>販売ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @item.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active == true %>
            <td>販売中</td>
          <% else %>
            <td>在庫切れ</td>
          <% end %>
      </td>
      <td><%= link_to '詳細', admin_item_path(item.id) %></td>
    </tr>
    <% end %>
  </tbody>

</table>
