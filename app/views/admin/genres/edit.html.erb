<div class="container">
  <h3>ジャンル編集</h3>
  <br>
  <div class="row justify-content-center">
    <div class="col-8">
      <%= form_with model: @genre, url: admin_genre_path, local:true do |f| %>
        <td><%= f.label :ジャンル名 %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= f.text_field :name %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= f.submit '変更を保存', class: "btn btn-success btn-sm" %></td>
      <% end %>
    </div>
  </div>
</div>