<div class="container">
    <div class="row">
        <div class="col-lg-4">
          <h1>配送先登録/一覧</h1>
        </div>
    </div>
    <div class="row">
      <%= form_with model: @address, url: '/public/addresses' do |f| %>
        <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :addresses %>
        </div>
        <div class="form-group">
          <%= f.label :宛名 %>
          <%= f.text_field :name %>
        </div>
        <%= f.submit '新規登録' %>
      <% end %>
    </div>

    <div class="row">
      <div class="col-lg-7">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.addresses %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to '編集する', edit_public_address_path(address.id) %>
                <%= button_to '削除する',  public_address_path(address.id), method: :delete %>
                <!--rails6からセキュリティの関係でlink_to method deleteなのにルートがGETになることがある
                button_to を使うとうまくいく-->
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>

</div>