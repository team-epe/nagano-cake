<h2>マイページ</h2>
  <h3>登録情報</h3>
    <%= link_to '編集する', edit_public_customer_path(current_customer.id) %>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>

    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>

    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>

    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>

    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  <h3>配送先</h3>
    <%= link_to '一覧を見る', public_addresses_path(current_customer.id) %>
  <h3>注文履歴</h3>
    <%= link_to '一覧を見る', public_orders_path(current_customer.id) %>