<!--顧客視点　商品詳細-->
<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <table class="table table-bordered">
        <thead>
          <th>ジャンル検索</th>
        </thead>
        <tbody class="table table-borderless">
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to public_items_path(name: genre.id) do %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-4">
      <%= attachment_image_tag @item, :image, size: "300x300" %>
    </div>
    <div class="col-lg-6">
      <table class="table table-borderless">
        <tr>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>¥<%= @item.price %>(税込)</td>
        </tr>
      </table>
      <%= form_with model: @cart_item, url: public_cart_items_path, local: true do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.number_field :amount, min:1, placeholder: '個数選択' %>

        <%= f.submit 'カートに入れる' %>
      <% end %>
    </div>
  </div>
</div>










