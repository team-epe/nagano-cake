<!--商品新規投稿-->
<!-- url:'パス'→指定したURLにPOST（新規データ送信）する  -->
<div class="container">
  <div class="row">
    <h1>商品新規登録</h1>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <%= form_with model: @item, url: '/admin/items'  do |f| %>
      <tr>
        <td><%= f.label :商品画像 %></td>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <td><%= f.label :商品名 %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :商品説明 %></td>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <td><%= f.label :ジャンル %></td>
        <td><%= f.collection_select :genre_id, @genre, :id, :name, include_blank: '-- 選択してください --' %></td>
      </tr>
      <tr>
        <td><%= f.label :税込価格 %></td>
        <td><%= f.number_field :price %> 円</td>
      </tr>
      <tr>
        <td><%= f.label :販売ステータス %></td>
        <td><%= f.radio_button :is_active, true %>販売中
            <%= f.radio_button :is_active, false %>在庫切れ
        </td>
        <td><%= f.submit '新規登録' %></td>
      </tr>
      <% end %>
    </table>
  </div>