<div class="container">
<h4><%= @customers.last_name %><%= @customers.first_name %>様の会員情報</h4>
<div class="row">

<%= form_for(@customers,url:admin_customer_path) do |f| %>
<div class="col-xs-10">
  <div class="form-group col-xs-9">
  <%= f.label :会員ID %>
  <%= f.text_field :id, autofocus: true, autocomplete: "id"%>
  </div>

  <div class="form-group col-xs-9">
  <%= f.label :氏名 %>
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %><br>
  </div>

  <div class="form-group col-xs-9">
  <%= f.label :フリガナ %>
  <%= f.text_field :last_name_kana,autofocus: true, autocomplete: "last_name_kana" %>
  <%= f.text_field :first_name_kana,autofocus: true, autocomplete: "first_name_kana" %><br>
  </div>

  <div class="form-group col-xs-9">
  <%= f.label :郵便番号 %>
  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code"%><br>
  </div>

  <div class="form-group col-xs-9">
  <%= f.label :住所 %>
  <%= f.text_field :address, autofocus: true, autocomplete: "address" ,size: "40"%><br>
  </div>

  <div class="form-group col-xs-9">
  <%= f.label :電話番号 %>
  <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number"%><br>
  </div>

  <div class="form-group col-xs-9">
  <%= f.label :メールアドレス %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email"%><br>
  </div>

  <div class="form-group col-xs-9">
  <%= f.label :会員ステータス %>
  <%= f.radio_button :is_deleted, false %>
  <%= f.label :有効 %>
  <%= f.radio_button :is_deleted, true %>
  <%= f.label :退会 %>
  </div>


  <%= f.submit "変更を保存",class:"btn btn-success" %>

<% end %>
</div>
</div>
</div>